<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Carpark System</title>

    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1>Carpark System</h1>

    <div class="mainContent">
      <div class="column">
        <h3>Vehicles</h3>
        <table>
          <tr>
            <th>License Plate</th>
            <!-- <th>Inside Car Park</th> -->
            <th>Is Authorised</th>
            <th>Last Access Time</th>
          </tr>
          <% if(vehicles){ %>
            <% vehicles.forEach(function(vehicle){ %>
              <tr>
                <td><%= vehicle.license_plate %></td>
                <!-- <td><%= vehicle.is_parked ? 'yes' : 'no' %></td> -->
                <td><%= vehicle.authorised ? 'yes' : 'no' %></td>
                <td><%= vehicle.last_access_time %></td>
              </tr>
            <% }) %>
          <% } %>

        </table>

        <form class="" action="addvehicle" method="post">
          <label for="licenseplate">License Plate:</label>
          <input type="text" name="licenseplate" placeholder="Enter license plate here..." minlength="7" maxlength="7" required>
          <label for="authorised">Authorised:</label>
          <input type="checkbox" name="authorised">
          <button class="formButton" type="submit" name="submit">Add Vehicle</button>
        </form>
      </div>
      <div class="column">
        <h3>Parking Spaces</h3>
        <table>
          <tr>
            <th>ID</th>
            <th>Location</th>
            <th>Occupied</th>
          </tr>
          <% if(vehicles){ %>
            <% vehicles.forEach(function(vehicle){ %>
              <tr>
                <td><%= vehicle.license_plate %></td>
                <td><%= vehicle.authorised ? 'yes' : 'no' %></td>
                <td><%= vehicle.last_access_time %></td>
              </tr>
            <% }) %>
          <% } %>

        </table>

        <form class="" action="addparkingspace" method="post">
          <label for="id">Parking Space ID:</label>
          <input type="text" name="id" placeholder="Enter Parking space ID here..." required>
          <label for="floor">Floor:</label>
          <input type="text" name="floor" placeholder="Enter floor number here..." required>
          <label for="direction">Direction:</label>
          <input type="text" name="direction" placeholder="Enter direction(left/right etc.) here..." required>
          <button class="formButton" type="submit" name="submit">Add Parking Space</button>
        </form>
      </div>
      </div>
    </div>

  </body>
</html>
